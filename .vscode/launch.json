{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        // MARK: [ARM] Linux Debug
        {
            "name": "[ARM] Cmake: Debug",
            "preLaunchTask": "CMake: build",
            "executable": "${command:cmake.launchTargetPath}",
            "configFiles": [
                "${input:workspaceFolderForwardSlash}/.config/openocd/stm32f3disco_A203001113.cfg",
                "target/stm32f3x.cfg",
            ],
            "svdFile": ".config/svd/STM32F303.svd",
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 4
            },
            "cwd": "${workspaceRoot}",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "runToEntryPoint": "main",
            "interface": "swd",
            "swoConfig": {
                "enabled": true,
                "source": "probe",
                "cpuFrequency": 16000000,
                "swoFrequency": 200000,
                "decoders": [
                    { "type": "console", "label": "ITM", "port": 0 }
                ],
                "swoPath": ""
            },
            "showDevDebugOutput": "raw"
        },
        // MARK: [ARM] Linux Attach
        {
            "name": "[ARM] Attach on Linux",
            "executable": "${command:cmake.launchTargetPath}",
            "configFiles": [
                "${input:workspaceFolderForwardSlash}/.config/openocd/stm32f3disco_A203001113.cfg",
                "target/stm32f3x.cfg",
            ],
            "svdFile": ".config/svd/STM32F303.svd",
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 4
            },
            "cwd": "${workspaceRoot}",
            "request": "attach",
            "type": "cortex-debug",
            "servertype": "openocd",
            "runToEntryPoint": "main",
            "interface": "swd",
            "swoConfig": {
                "enabled": true,
                "source": "probe",
                "cpuFrequency": 16000000,
                "swoFrequency": 200000,
                "decoders": [
                    { "type": "console", "label": "ITM", "port": 0 }
                ],
                "swoPath": ""
            },
            "showDevDebugOutput": "raw"
        },
    ],
    "inputs": [
        {
          "id": "workspaceFolderForwardSlash",
          "type": "command",
          "command": "extension.commandvariable.transform",
          "args": {
            "text": "${workspaceFolder}",
            "find": "\\\\",
            "replace": "/",
            "flags": "g"
          }
        },
        {
          "id": "workspaceFolderForwardSlash",
          "type": "command",
          "command": "extension.commandvariable.transform",
          "args": {
            "text": "${workspaceFolder}",
            "find": "\\\\",
            "replace": "/",
            "flags": "g"
          }
        },
        {
          "id": "launchTargetDirectoryForwardSlash",
          "type": "command",
          "command": "extension.commandvariable.transform",
          "args": {
            "text": "${command:cmake.launchTargetDirectory}",
            "find": "\\\\",
            "replace": "/",
            "flags": "g"
          }
        },
        {
          "id": "activeFolderNameForwardSlash",
          "type": "command",
          "command": "extension.commandvariable.transform",
          "args": {
            "text": "${command:cmake.activeFolderName}",
            "find": "\\\\",
            "replace": "/",
            "flags": "g"
          }
        },
      ]
}